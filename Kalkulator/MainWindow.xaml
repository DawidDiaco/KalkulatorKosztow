        <Button x:Name="ConvertButton" Content="Przelicz" Grid.Column="2" HorizontalAlignment="Left" Margin="118,534,0,0" VerticalAlignment="Top" Width="75" Click="ConvertButton_Click"/>
    </Grid>
</Window>
